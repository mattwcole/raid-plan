{
  "name": "raidplan-app",
  "version": "0.1.0",
  "description": "Raid Plan client application",
  "main": "index.js",
  "repository": "https://github.com/mattwcole/raidplan.git",
  "author": "Matt Cole",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "format": "prettier-eslint --write webpack.config.js \"src/**/*.{js,jsx}\"",
    "lint": "eslint webpack.config.js src --ext js jsx",
    "test": "echo 'TODO: Run JS unit tests'",
    "build": "webpack --output-path ../RaidPlan.Host/wwwroot",
    "build:prod": "webpack -p --env production --output-path ../RaidPlan.Host/wwwroot"
  },
  "lint-staged": {
    "gitDir": "../../",
    "linters": {
      "*.{js,jsx}": [
        "prettier-eslint --write",
        "git add"
      ]
    }
  },
  "dependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-react": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-hot-loader": "next",
    "webpack": "^2.4.1"
  },
  "devDependencies": {
    "aspnet-webpack": "^1.0.28",
    "husky": "^0.13.3",
    "lint-staged": "^3.4.0",
    "prettier-eslint-cli": "^3.4.2",
    "webpack-hot-middleware": "^2.18.0"
  }
}
